<Window
    x:Class="WindowsEdgeLight.ControlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Controls"
    Width="370"
    Height="48"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None">

    <Border
        HorizontalAlignment="Center"
        Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
        BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="8">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Opacity" Value="0.6" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <StackPanel Orientation="Horizontal">
            <Button
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Decrease brightness"
                Click="BrightnessDown_Click"
                Content="&#xE708;"
                FontFamily="Segoe MDL2 Assets"
                ToolTip="Decrease brightness (Ctrl+Shift+Down)" />

            <Button
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Increase brightness"
                Click="BrightnessUp_Click"
                Content="&#xE706;"
                FontFamily="Segoe MDL2 Assets"
                ToolTip="Increase brightness (Ctrl+Shift+Up)" />

            <Button
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Warmer light"
                Click="ColorWarmer_Click"
                Content="ðŸ”¥"
                ToolTip="Make light warmer (K-)" />

            <Button
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Cooler light"
                Click="ColorCooler_Click"
                Content="â„ï¸"
                ToolTip="Make light cooler (K+)" />

            <Button
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Toggle light"
                Click="Toggle_Click"
                Content="&#xEA80;"
                FontFamily="Segoe MDL2 Assets"
                ToolTip="Toggle light (Ctrl+Shift+L)" />

            <Button
                x:Name="SwitchMonitorButton"
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Switch monitor"
                Click="SwitchMonitor_Click"
                Content="&#xE7F4;"
                FontFamily="Segoe MDL2 Assets"
                ToolTip="Switch monitor" />

            <Button
                x:Name="AllMonitorsButton"
                Width="40"
                Height="40"
                Margin="4,4,0,4"
                AutomationProperties.Name="Show on all monitors"
                Click="AllMonitors_Click"
                Content="&#xF57D;"
                FontFamily="Segoe MDL2 Assets"
                ToolTip="Show on all monitors" />

            <Button
                Width="40"
                Height="40"
                Margin="4,4,4,4"
                AutomationProperties.Name="Exit"
                Click="Close_Click"
                Content="&#xE711;"
                FontFamily="Segoe MDL2 Assets"
                ToolTip="Exit" />
        </StackPanel>
    </Border>
</Window>
