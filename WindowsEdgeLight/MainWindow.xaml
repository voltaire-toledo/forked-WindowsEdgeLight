<Window x:Class="WindowsEdgeLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsEdgeLight"
        mc:Ignorable="d"
        Title="Windows Edge Light" 
        Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    
    <Grid x:Name="MainGrid" IsHitTestVisible="False">
        <!-- Outer Border with Gradient Effect -->
        <Rectangle x:Name="EdgeLightBorder" 
                   RadiusX="20" 
                   RadiusY="20"
                   StrokeThickness="80"
                   Opacity="0.95">
            <Rectangle.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFFFF" Offset="0.0"/>
                    <GradientStop Color="#F0F0F0" Offset="0.3"/>
                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#F0F0F0" Offset="0.7"/>
                    <GradientStop Color="#FFFFFF" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
            <Rectangle.Effect>
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>
        
        <!-- Control Panel (Top-Right Corner) -->
        <StackPanel x:Name="ControlPanel" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="20"
                    Orientation="Horizontal"
                    IsHitTestVisible="True"
                    Background="#40000000"
                    Opacity="0.3">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Opacity" Value="0.3"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <Button x:Name="BrightnessDownButton" 
                    Content="🔅" 
                    Click="BrightnessDown_Click"
                    Width="40" Height="40" 
                    Margin="5"
                    FontSize="20"
                    ToolTip="Decrease Brightness"/>
            
            <Button x:Name="BrightnessUpButton" 
                    Content="🔆" 
                    Click="BrightnessUp_Click"
                    Width="40" Height="40" 
                    Margin="5"
                    FontSize="20"
                    ToolTip="Increase Brightness"/>
            
            <Button x:Name="ToggleButton" 
                    Content="💡" 
                    Click="Toggle_Click"
                    Width="40" Height="40" 
                    Margin="5"
                    FontSize="20"
                    ToolTip="Toggle Light (Ctrl+Shift+L)"/>
            
            <Button x:Name="CloseButton" 
                    Content="✖" 
                    Click="Close_Click"
                    Width="40" Height="40" 
                    Margin="5"
                    FontSize="16"
                    ToolTip="Exit"/>
        </StackPanel>
    </Grid>
</Window>
